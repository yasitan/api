{
  "env": {
      "browser": true,
      "es2021": true
  },
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": ["error", { "ignoreRestArgs": false }],
    "@typescript-eslint/no-non-null-assertion": "off",
    "linebreak-style": ["error", "unix"],
    "@typescript-eslint/naming-convention": [
    "error",
    { "selector": "property", "format": ["UPPER_CASE"], "modifiers": ["static", "readonly"] }
    ],
    "@typescript-eslint/consistent-type-definitions": "error",
    "@typescript-eslint/dot-notation": "off",
    "@typescript-eslint/explicit-member-accessibility": [
    "off",
    {
        "accessibility": "explicit"
    }
    ],
    "prefer-arrow-callback": "warn",
    "dot-notation": "off",
    "id-blacklist": "off",
    "id-match": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-empty-function": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error",
    "no-underscore-dangle": "off",
    "no-unused-expressions": "error",
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 140, "ignoreUrls": true, "ignoreComments": true }],
    "max-lines-per-function": ["warn", { "max": 35, "skipBlankLines": true, "skipComments": true }],
    "no-magic-numbers": "off",
    "@typescript-eslint/no-magic-numbers": [
    "error",
    {
        "ignore": [-1, 0, 1, 2, 7, 10, 60, 12, 24, 30, 365, 1000, 1024, 100],
        "ignoreReadonlyClassProperties": true,
        "ignoreEnums": true
    }
    ],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "semi-spacing": "error",
    "semi": "off",
    "@typescript-eslint/semi": ["error"],
    "arrow-body-style": ["warn", "as-needed"]
  }
}
